<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>es.gva.oficinajava</groupId>
    <artifactId>oficinajava-prototipo</artifactId>
    <version>01.00.00-SNAPSHOT</version>
  </parent>

  <artifactId>oficinajava-prototipo-repository</artifactId>

  <packaging>jar</packaging>

  <name>Oficinajava Prototipo - Repositorio</name>
  <description>M贸dulo repositorio proyecto Oficinajava Prototipo</description>

  <dependencies>

    <dependency>
      <groupId>es.gva.oficinajava</groupId>
      <artifactId>oficinajava-prototipo-model</artifactId>
      <version>${project.version}</version>
      <scope>compile</scope>
    </dependency>

    <!-- Dependencias base utilizadas en los fuentes del m贸dulo -->
    <dependency>
      <groupId>org.springframework.data</groupId>
      <artifactId>spring-data-jpa</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework.data</groupId>
      <artifactId>spring-data-commons</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-tx</artifactId>
      <scope>compile</scope>
    </dependency>

    <!-- API de construcci贸n de consultas SQL -->
    <dependency>
      <groupId>com.querydsl</groupId>
      <artifactId>querydsl-jpa</artifactId>
      <scope>compile</scope>
    </dependency>
    
    <!-- Dependencia de base de datos Hypersonic para entorno local desarrollo -->
    <dependency>
      <groupId>org.hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
    </dependency>
    
    <!-- Dependencias de base de datos Oracle y PostgreSQL -->
    <!-- Solo necesarias si se utilizan en el entorno local de desarrollo -->
    <dependency>
      <groupId>com.oracle</groupId>
      <artifactId>ojdbc8</artifactId>
    </dependency>
    <dependency>
      <groupId>org.postgresql</groupId>
      <artifactId>postgresql</artifactId>
    </dependency>

  </dependencies>

  <build>
    <plugins>

      <!-- Genera clases QType para facilitar las consultas con QueryDSL -->
      <plugin>
        <groupId>com.querydsl</groupId>
        <artifactId>querydsl-maven-plugin</artifactId>
      </plugin>

      <!-- Integraci贸n de Liquibase con Maven para actualizar la BBDD -->
      <plugin>
        <groupId>org.liquibase</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
      </plugin>

    </plugins>
  </build>

</project>
